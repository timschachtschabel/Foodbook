<Page x:Class="BeepWPFApp.lstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeepWPFApp"
    
      mc:Ignorable="d" 
      Title="Beep Scanner">



    <Grid Height="480" Width="360">
        <Rectangle HorizontalAlignment="Left" Height="480" Margin="1,31,0,0" Stroke="Black" VerticalAlignment="Top" Width="360" Fill="#FFE8EBE4"/>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="Zoek uw product hier..." VerticalAlignment="Top" Width="266" Margin="27,47,0,0" AutomationProperties.IsColumnHeader="True" Background="#FF9DC0BC" FontStyle="Italic" />
        <Button Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="38" Margin="298,47,0,0" Height="30" BorderBrush="#FFE8EBE4" Foreground="#FFE8EBE4" RenderTransformOrigin="0.026,0.4" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="Resources/search.png"/>
            </Button.Background>
        </Button>
        <Rectangle HorizontalAlignment="Left" Height="53" Margin="0,-6,0,0" Stroke="#FF9DC0BC" VerticalAlignment="Top" Width="360" RenderTransformOrigin="0.521,1.872">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Resources/headers.png" Stretch="Uniform"/>
            </Rectangle.Fill>
        </Rectangle>
        <ListBox x:Name="lstNaam" HorizontalAlignment="Left" Height="203" VerticalAlignment="Top" Width="205" Margin="27,82,0,0" SelectionMode="Extended"/>
        <ListBox x:Name="lstPrijs" HorizontalAlignment="Left" Height="203" Margin="237,82,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Opslaan" HorizontalAlignment="Left" Margin="237,336,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click_1" Height="43"/>
        <TextBox x:Name="favobox" HorizontalAlignment="Left" Height="104" Margin="27,311,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="205"/>
        <Button x:Name="addfavo" Content="&lt;" HorizontalAlignment="Left" Margin="237,311,0,0" VerticalAlignment="Top" Width="45"/>
        <Button x:Name="deletefavo" Content="&gt;" HorizontalAlignment="Left" Margin="291,311,0,0" VerticalAlignment="Top" Width="45" Click="Button_Click_2"/>


    </Grid>
</Page>
