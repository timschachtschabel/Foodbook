<Window x:Class="BeepWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeepWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblHeader" Content="hallo" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="173" FontWeight="Bold" FontFamily="Open Sans" FontSize="16"/>
        <ListView x:Name="lstNaam" HorizontalAlignment="Left" Height="323" VerticalAlignment="Top" Width="101" Margin="0,47,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lstPrijs" HorizontalAlignment="Left" Height="323" VerticalAlignment="Top" Width="101" Margin="101,47,0,0" DataContextChanged="lstPrijs_DataContextChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="206,10,0,0"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="223,33,0,0" Click="Button_Click"/>

    </Grid>
</Window>
