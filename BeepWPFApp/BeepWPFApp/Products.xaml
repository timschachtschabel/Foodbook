<Page x:Class="BeepWPFApp.Products"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeepWPFApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Products">

    <Grid>
        <Grid Width="360" Height="480"
         Background="#FFE8EBE4">
            <Rectangle HorizontalAlignment="Left" Height="50" Stroke="#FF9DC0BC" VerticalAlignment="Top" Width="360">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="Resources/headers.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <ListBox Name="productlist" HorizontalAlignment="Left" Height="248" Margin="10,69,0,0" VerticalAlignment="Top" Width="320" SelectionChanged="ListBox_SelectionChanged"/>

        </Grid>
    </Grid>
</Page>
